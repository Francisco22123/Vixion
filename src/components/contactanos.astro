---
import '../styles/global.css';
import Footer from '../components/Footer.astro';
---

<h1 class="text-4xl font-manrope font-bold text-gray-900 leading-[3.25rem] text-center">
    Contáctanos
</h1>

<div class="flex flex-col-reverse lg:flex-row justify-center gap-10 mt-10">
    
    
    <div class="flex-1 w-full h-64 lg:h-130">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3675.319243037162!2d-109.92839252398734!3d22.90159292083074!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x86af4bfba29a0f0d%3A0x6d037cad4aad978e!2sVixion%20Consultores!5e0!3m2!1ses!2smx!4v1740549232421!5m2!1ses!2smx" 
            class="w-full h-64 lg:h-130" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade">
        </iframe>
    </div>

    <!-- Sección de Nuestros Servicios -->
    <div class="flex-1 text-left bg-gradient-to-r from-gray-100 to-gray-300 p-8 rounded-lg shadow-lg">
        <h1 class="p-6 text-black text-3xl font-bold border-b-4 border-gray-500 inline-block">
            Nuestros servicios
        </h1>
        <p class="text-lg text-gray-700 mb-4 italic">
            Ofrecemos soluciones financieras adaptadas a tus necesidades.
        </p>
        
        <a href="/contabilidad" class="block">
            <button class="flex items-center gap-3 hover:bg-gray-400 hover:scale-105 transition-all duration-300 p-6 text-black text-2xl lg:text-3xl w-full text-left bg-gray-200 rounded-lg shadow-md animate-fadeIn">
                <img src="/contabilidad.png" class="w-8 h-8" alt="Contabilidad">
                Contabilidad
            </button>
        </a>
        <a href="/capacitacion" class="block">
            <button class="flex items-center gap-3 hover:bg-gray-400 hover:scale-105 transition-all duration-300 p-6 text-black text-2xl lg:text-3xl w-full text-left bg-gray-200 rounded-lg shadow-md animate-fadeIn">
                <img src="/capacitacionn.png" class="w-8 h-8" alt="capacitación">
                capacitación
            </button>
        </a>
        <a href="/nomina" class="block">
            <button class="flex items-center gap-3 hover:bg-gray-400 hover:scale-105 transition-all duration-300 p-6 text-black text-2xl lg:text-3xl w-full text-left bg-gray-200 rounded-lg shadow-md animate-fadeIn">
                <img src="/nomina.png" class="w-8 h-8" alt="Nómina">
                Nómina
            </button>
        </a>
        <a href="/immseinfonavit" class="block">
            <button class="flex items-center gap-3 hover:bg-gray-400 hover:scale-105 transition-all duration-300 p-6 text-black text-2xl lg:text-3xl w-full text-left bg-gray-200 rounded-lg shadow-md animate-fadeIn">
                <img src="/imms.png" class="w-8 h-8" alt="IMSS E INFONAVIT">
                IMSS E INFONAVIT
            </button>
        </a>
    </div>
</div>

<Footer />
