---
// src/components/Carrusel.astro
import '../styles/global.css';
---

<div class="relative w-full max-w-[2100px] mx-auto overflow-hidden px-4">
  <div class="carousel-body flex transition-transform duration-300">
    
    <div class="carousel-slide w-full sm:w-1/2 lg:w-1/3 flex-shrink-0 px-4">
      <a href="/contabilidad">
        <div class="h-[600px] w-full overflow-hidden rounded-4xl"> 
          <img src="/bcs.jpg" alt="Slide 1" class="w-full h-full object-cover transition duration-300 ease-in-out hover:scale-110" />
        </div>
      </a>
    </div>
    <div class="carousel-slide w-full sm:w-1/2 lg:w-1/3 flex-shrink-0 px-4">
      <a href="/nomina">
        <div class="h-[600px] w-full overflow-hidden rounded-4xl"> 
          <img src="/nomina.jpg" alt="Slide 2" class="w-full h-full object-cover transition duration-300 ease-in-out hover:scale-110" />
        </div>
      </a>
    </div>
    <div class="carousel-slide w-full sm:w-1/2 lg:w-1/3 flex-shrink-0 px-4">
      <a href="/imss">
        <div class="h-[600px] w-full overflow-hidden rounded-4xl"> 
          <img src="/IMSS.jpg" alt="Slide 3" class="w-full h-full object-cover transition duration-300 ease-in-out hover:scale-110" />
        </div>
      </a>
    </div>
    <div class="carousel-slide w-full sm:w-1/2 lg:w-1/3 flex-shrink-0 px-4">
      <a href="/capacitacion">
        <div class="h-[600px] w-full overflow-hidden rounded-4xl"> 
          <img src="/bcs.jpg" alt="Slide 4" class="w-full h-full object-cover transition duration-300 ease-in-out hover:scale-110" />
        </div>
      </a>
    </div>

      <!-- 
    <div class="carousel-slide w-full sm:w-1/2 lg:w-1/3 flex-shrink-0 px-4">
      <div class="h-[600px] w-full overflow-hidden rounded-4xl"> 
        <img src="/image5.jpg" alt="Slide 5" class="w-full h-full object-cover transition duration-300 ease-in-out hover:scale-110" />
      </div>
    </div>-->

  </div>

  <!-- Botones de navegación -->
  <button class="absolute left-0 top-1/2 transform -translate-y-1/2 bg-white p-2 rounded-full left-button shadow-lg text-2xl z-10">
    &#10094;
  </button>
  <button class="absolute right-0 top-1/2 transform -translate-y-1/2 bg-white p-2 rounded-full right-button shadow-lg text-2xl z-10">
    &#10095;
  </button>
</div>

<script>
  let currentIndex = 0;
  const slides = document.querySelectorAll('.carousel-slide');
  const totalSlides = slides.length;
  const carouselBody = document.querySelector('.carousel-body');

  // Botón izquierdo
  document.querySelector('.left-button')?.addEventListener('click', () => {
    currentIndex = (currentIndex > 0) ? currentIndex - 1 : totalSlides - 1; // No vuelve al inicio si ya está en el primer slide
    updateCarousel();
  });

  // Botón derecho
  document.querySelector('.right-button')?.addEventListener('click', () => {
    currentIndex = (currentIndex < totalSlides - 1) ? currentIndex + 1 : 0; // Vuelve al primer slide si está en el último
    updateCarousel();
  });

  // Función de actualización del carrusel
  function updateCarousel() {
    if (!carouselBody) return;

    const slide = slides[0];
    const slideWidth = slide.offsetWidth ;  // Asegura el espaciado correcto

    const offset = -(currentIndex * slideWidth);  // Mueve el carrusel a la posición correcta
    carouselBody.style.transform = `translateX(${offset}px)`;
  }

  // Auto-slide (se mueve cada 30 segundos)
  setInterval(() => {
    currentIndex = (currentIndex < totalSlides - 1) ? currentIndex + 1 : 0;  // Sigue ciclando hasta el primer slide al llegar al último
    updateCarousel();
  }, 30000);
</script>

<style>
  .carousel-body {
    transition: transform 0.5s ease-in-out;
  }
</style>
