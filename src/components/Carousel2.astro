---
// src/components/Carrusel.astro
import '../styles/global.css';
---

<div class="relative w-full max-w-[2100px] mx-auto overflow-hidden px-4">
  <div class="carousel-body flex transition-transform duration-300">
    <div class="carousel-slide w-full sm:w-1/2 lg:w-1/3 flex-shrink-0 px-4">
      <div class="h-[800px] w-full overflow-hidden rounded-4xl"> 
        <img src="/persona1.jpg" alt="Slide 1" class="w-full h-full object-cover transition duration-300 ease-in-out hover:scale-110" />
      </div>
    </div>
    <div class="carousel-slide w-full sm:w-1/2 lg:w-1/3 flex-shrink-0 px-4">
      <div class="h-[800px] w-full overflow-hidden rounded-4xl"> 
        <img src="/persona3.jpg" alt="Slide 2" class="w-full h-full object-cover transition duration-300 ease-in-out hover:scale-110" />
      </div>
    </div>
    <div class="carousel-slide w-full sm:w-1/2 lg:w-1/3 flex-shrink-0 px-4">
      <div class="h-[800px] w-full overflow-hidden rounded-4xl"> 
        <img src="/persona2.jpg" alt="Slide 3" class="w-full h-full object-cover transition duration-300 ease-in-out hover:scale-110" />
      </div>
    </div>
    <div class="carousel-slide w-full sm:w-1/2 lg:w-1/3 flex-shrink-0 px-4">
      <div class="h-[800px] w-full overflow-hidden rounded-4xl"> 
        <img src="/persona.jpg" alt="Slide 4" class="w-full h-full object-cover transition duration-300 ease-in-out hover:scale-110" />
      </div>
    </div>
    <div class="carousel-slide w-full sm:w-1/2 lg:w-1/3 flex-shrink-0 px-4">
      <div class="h-[800px] w-full overflow-hidden rounded-4xl"> 
        <img src="/image5.jpg" alt="Slide 5" class="w-full h-full object-cover transition duration-300 ease-in-out hover:scale-110" />
      </div>
    </div>
  </div>

  <button class="absolute left-0 top-1/2 transform -translate-y-1/2 bg-white p-2 rounded-full left-button shadow-lg text-2xl z-10">
    &#10094;
  </button>

  <button class="absolute right-0 top-1/2 transform -translate-y-1/2 bg-white p-2 rounded-full right-button shadow-lg text-2xl z-10">
    &#10095;
  </button>
</div>


<script>
  let currentIndex = 0;
const slides = document.querySelectorAll('.carousel-slide');
const totalSlides = slides.length;
const carouselBody = document.querySelector('.carousel-body') as HTMLElement | null;

document.querySelector('.left-button')?.addEventListener('click', () => {
  currentIndex = (currentIndex > 0) ? currentIndex - 1 : Math.max(0, totalSlides - 3);
  updateCarousel();
});

document.querySelector('.right-button')?.addEventListener('click', () => {
  currentIndex = (currentIndex < totalSlides - 3) ? currentIndex + 1 : 0;
  updateCarousel();
});

function updateCarousel() {
  if (!carouselBody) return;

  const slide = slides[0] as HTMLElement;
  const slideWidth = slide.offsetWidth + 32; 

  const offset = -(currentIndex * slideWidth);
  carouselBody.style.transform = `translateX(${offset}px)`;
}

setInterval(() => {
  currentIndex = (currentIndex < totalSlides - 3) ? currentIndex + 1 : 0;
  updateCarousel();
}, 30000);

</script>

<style>
  .carousel-body {
    transition: transform 0.5s ease-in-out;
  }
</style>
